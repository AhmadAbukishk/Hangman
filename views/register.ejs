<%- include("header.ejs")%>

   
<body class="d-flex justify-content-center align-items-center">
    <div class="row border border-5 border-warning rounded-5 p-4 game">
        <form method = "post" action="/register">
            <label for="name" class = "form-label ">Name</label>
            <input type="text" class = "form-control" id = "name" name = "name">

            <label for="email-address" class = "form-label mt-2">Email Address</label>
            <input type="email" class = "form-control" id = "email-address" name = "email">

            <label for="password" class = "form-label mt-2">Password</label>
            <input type="password" class = "form-control" id = "password" name = "password">
            
            <button type = "submit"  id = "login-btn"  class = "btn btn-lg btn-warning mt-5 px-5 ms-3" >Register</button>

        </form>
    </div>
</body>